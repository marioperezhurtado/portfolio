---
import Project from '../../components/Project.astro'
import Link from '../../components/ui/Link.astro'
---

<div class="relative">
  <svg
    viewBox="0 0 1440 320"
    preserveAspectRatio="none"
    class="absolute -top-40 pointer-events-none -left-5 sm:-left-10 w-screen h-42 md:h-60 lg:h-80 hidden md:block">
    <path
      id="path"
      fill="transparent"
      fill-opacity="1"
      d="M0,96L120,96C240,96,480,96,720,128C960,160,1200,224,1320,256L1440,288"
      stroke="#393B4E"
      stroke-width="2"
      stroke-dasharray="10 5"
      stroke-dashoffset="0"></path>
  </svg>
  <section class="mb-16 sm:mb-28 max-w-screen-lg mx-auto">
    <h2
      class="text-2xl sm:text-3xl mb-2 sm:mb-4 font-bold font-display text-pf-light">
      I like building things
    </h2>
    <p class="sm:text-lg">The best way to learn is by doing. 👨‍💻</p>
    <ul
      class="mt-6 sm:mt-10 mb-5 sm:mb-8 grid xs:grid-cols-2 md:grid-cols-3 gap-5">
      <li>
        <Project
          title="DevForum"
          description="Web forum focused on programming topics."
          url="https://devforum.dev"
        />
      </li>
      <li>
        <Project
          title="Barbería HB"
          description="Website for a local barbershop in Crevillente."
          url="https://barberiahb.com"
        />
      </li>
      <li>
        <Project
          title="BOBLE"
          description="Online free web chat."
          url="https://chat.marioph.com"
        />
      </li>
    </ul>
    <Link
      href="https://github.com/marioperezhurtado"
      target="_blank"
      rel="noopener noreferrer"
      arrow>
      More projects
    </Link>
  </section>
</div>
