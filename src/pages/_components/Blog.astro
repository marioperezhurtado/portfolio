---
import { getCollection } from 'astro:content'
import Link from '../../components/ui/Link.astro'

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<section class="mb-16 sm:mb-28 px-5 sm:px-10 max-w-screen-lg mx-auto">
  <h2
    class="text-2xl sm:text-4xl mb-2 sm:mb-4 font-bold font-display text-pf-light">
    Blog Posts
  </h2>
  <p class="w-full text-lg">
    Sometimes I write about stuff I find interesting. üìù
  </p>
  <ul class="mt-6 sm:mt-10 mb-5 sm:mb-8 flex flex-col gap-5">
    {
      posts.map((post) => (
        <li class="max-w-screen-sm">
          <a
            href={`/blog/${post.slug}`}
            class="text-lg sm:text-xl font-display text-pf-light font-bold underline underline-offset-4 decoration-2 decoration-pf-dark-3 hover:decoration-pf-light-2 transition">
            {post.data.title}
          </a>
          <p class="text-sm mb-1">
            {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </p>
          <p class="max-w-lg">{post.data.description}</p>
        </li>
      ))
    }
  </ul>
  <Link href="/blog" arrow>All posts</Link>
</section>
