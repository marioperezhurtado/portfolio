---
type Props = {
  title: string
  description: string
  features: string
  image: string
  url: string
  tech: string[]
}

const { title, description, features, image, url, tech } = Astro.props
---

<div class="flex gap-5 sm:gap-10 flex-col-reverse lg:flex-row">
  <div class="relative w-fit min-w-fit h-fit">
    <img
      class="h-full max-h-64 rounded-md aspect-video object-cover object-top shadow-md"
      src={image}
      alt={title}
    />
    <a
      href={url}
      aria-label="Open project in new tab"
      target="_blank"
      rel="noopener noreferrer"
      class="absolute bottom-2 right-2 bg-pf-dark-2 p-1.5 rounded-md hover:bg-pf-dark-3 transition">
      <svg
        width="20px"
        height="20px"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <g>
          <path
            d="M10.0002 5H8.2002C7.08009 5 6.51962 5 6.0918 5.21799C5.71547 5.40973 5.40973 5.71547 5.21799 6.0918C5 6.51962 5 7.08009 5 8.2002V15.8002C5 16.9203 5 17.4801 5.21799 17.9079C5.40973 18.2842 5.71547 18.5905 6.0918 18.7822C6.5192 19 7.07899 19 8.19691 19H15.8031C16.921 19 17.48 19 17.9074 18.7822C18.2837 18.5905 18.5905 18.2839 18.7822 17.9076C19 17.4802 19 16.921 19 15.8031V14M20 9V4M20 4H15M20 4L13 11"
            stroke="#E4E5EA"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </g>
      </svg>
    </a>
  </div>

  <div>
    <h2 class="text-xl sm:text-2xl">{title}</h2>
    <div class="text-pf-light-2 sm:text-xl max-w-screen-md">
      <p class="mb-4 sm:mb-8">{description}</p>
      <p class="mb-4 sm:mb-8">{features}</p>
      <p>
        {tech.map((t, i) => (i === tech.length - 1 ? `${t}.` : `${t}, `))}
      </p>
    </div>
  </div>
</div>
